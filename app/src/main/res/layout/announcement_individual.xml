<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/announcement_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="0dp">

    <RelativeLayout
        android:id="@+id/announcement_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/announcement_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="message text goes here"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/announcement_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date goes here"
            android:layout_below="@id/announcement_message"
            android:layout_marginTop="7dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/accent"
            android:textSize="12sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
