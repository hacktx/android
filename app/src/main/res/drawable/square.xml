<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="360">
            <shape>
                <stroke
                    android:width="5dp"
                    android:color="@color/hacktx_blue_lighter" />
                <solid android:color="#F8F7F5" />
                <corners android:radius="2dp" />
                <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp" />
                <size
                    android:width="35dp"
                    android:height="35dp" />
                <solid android:color="@android:color/transparent" />
            </shape>
        </rotate>
    </item>
</layer-list>