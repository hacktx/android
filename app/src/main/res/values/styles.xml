<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="PreferenceScreen" parent="AppTheme">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="DialogStyle" parent="AppCompatAlertDialogStyle">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="WelcomeScreen" parent="AppTheme">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="CheckInScreen" parent="AppTheme">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ButtonPrimary" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/primary</item>
        <item name="colorButtonNormal">@android:color/transparent</item>
    </style>

    <style name="ButtonSecondary" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/accent</item>
        <item name="colorButtonNormal">@android:color/transparent</item>
    </style>

</resources>
