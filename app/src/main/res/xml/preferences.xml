        android:title="@string/fragment_settings_privacy">

        <CheckBoxPreference
            android:key="@string/prefs_beacons_enabled"
            android:title="@string/fragment_settings_beacons"
            android:summaryOn="@string/fragment_settings_beacons_desc_on"
            android:summaryOff="@string/fragment_settings_beacons_desc_off"
            android:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/fragment_settings_about">

        <PreferenceScreen
