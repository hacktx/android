<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="@string/fragment_preferences_debug_key"
        android:title="@string/fragment_preferences_debug">

        <PreferenceScreen
            android:key="@string/prefs_debug"
            android:title="@string/fragment_preferences_debug" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="notifications"
        android:title="@string/fragment_preferences_notifications">

        <CheckBoxPreference
            android:key="@string/prefs_notif_announcements_enabled"
            android:title="@string/fragment_preferences_announcements"
            android:summaryOn="@string/fragment_preferences_announcements_desc_on"
            android:summaryOff="@string/fragment_preferences_announcements_desc_off"
            android:defaultValue="true"/>

        <PreferenceScreen
            android:key="@string/prefs_notif_shortcut"
            android:title="@string/fragment_preferences_notif_shortcut" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/fragment_preferences_about">

        <PreferenceScreen
            android:key="@string/prefs_about"
            android:title="@string/app_name" />
        <PreferenceScreen
            android:key="@string/prefs_licenses"
            android:title="@string/fragment_preferences_licenses" />

    </PreferenceCategory>
</PreferenceScreen>